<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="YardageTracker.Primary.Button" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/primary_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="YardageTracker.Secondary.Button" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/secondary_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
