<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="YardageTracker.Primary.Button" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/primary_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="YardageTracker.Secondary.Button" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/secondary_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="YardageTracker.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="YardageTracker.Header2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
